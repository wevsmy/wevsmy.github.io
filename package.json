{
  "name": "weii.ink",
  "version": "1.0.0",
  "description": "weii's blog",
  "main": "index.js",
  "scripts": {
    "init": "pnpm install --shamefully-hoist",
    "dev": "hugo server -D",
    "server": "hugo server -D",
